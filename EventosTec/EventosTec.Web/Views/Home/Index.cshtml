@{
    ViewData["Title"] = "Inicio";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="https://meetings.accor.com/assets/images/our-event-types/event_type_im1_evenement_prive.jpg" alt ="Privados" class="img-responsive center"/>
            <div class="carousel-caption" role="option">
                <p>
                    Eventos privados
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://www.diariomotor.com/competicion/imagenes/2016/04/drive-dmack-ford-fiesta-2016-m-sport-1024x448.jpg" alt="Publicos" class="img-responsive center"/>
            <div class="carousel-caption" role="option">
                <p>
                    Eventos públicos
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://unitrips.es/wp-content/uploads/2018/05/ibiza-hote-fiesta-espuma-1024x448.png" alt="Crear" class="img-responsive center"/>
            <div class="carousel-caption" role="option">
                <p>
                    Crea tus eventos
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Eventos del 2019</h2>
        <ul>
            <li>E3 2019</li>
            <li>Carnaval de Venecia </li>
            <li> Festival de Glastonbury </li>
            <li>Copa Mundial Femenina de la Fifa. Francia 2019</li>
            
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Eventos virtuales</h2>
        <ul>
            <li>Nintendo Direct</li>
            <li>IFT20 </li>
            <li>Latam Industry: Video Games Edition</li>
            
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Eventos cancelados debido a COVID-19</h2>
        <ul>
            <li>E3 2020</li>
            <li> EVO 2020</li>
            <li> Juegos olímpicos de Tokio 2020 </li>
            <li> MLB </li>
            <li> Liga MX</li>
        </ul>
    </div>
</div>
